<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base style for the base views. -->
    <style name="AppTheme.Dialog" />
    <!-- Style for the dialog top bar root layout. -->
    <style name="AppTheme.Dialog.TopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_top_bar_height</item>
        <item name="android:background">?attr/colorSurfaceContainerLowest</item>
        <item name="android:elevation">3dp</item>
    </style>
    <!-- Style for the dialog top bar title. -->
    <style name="AppTheme.Dialog.TopBarTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_small</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_default</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.TopBarTitle</item>
    </style>

    <!-- Base style for the widgets. -->
    <style name="AppTheme.Widget" />
    <!-- Style for the app bar layout. -->
    <style name="AppTheme.Widget.AppBarLayout" parent="@style/Widget.Material3.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- Style for the toolbar. -->
    <style name="AppTheme.Widget.Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/SubHeadingStyle</item>
        <item name="android:elevation">3dp</item>
    </style>
    <!-- Style for the dividers. -->
    <style name="AppTheme.Widget.Divider" parent="@style/Widget.Material3.MaterialDivider" />
    <!-- Style for the secondary horizontal dividers. -->
    <style name="AppTheme.Widget.DividerSecondaryH" parent="@style/Widget.Material3.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dividerInsetStart">@dimen/margin_horizontal_default</item>
        <item name="dividerInsetEnd">@dimen/margin_horizontal_default</item>
    </style>
    <!-- Style for the secondary vertical dividers. -->
    <style name="AppTheme.Widget.Divider.Vertical">
        <item name="android:layout_marginTop">@dimen/margin_vertical_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_default</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_default</item>
        <item name="android:background">?attr/colorOutlineVariant</item>
    </style>
    <!-- Style for the secondary horizontal dividers. -->
    <style name="AppTheme.Widget.Divider.Horizontal">
        <item name="android:layout_marginTop">@dimen/margin_vertical_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_small</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_default</item>
        <item name="android:background">?attr/colorOutlineVariant</item>
    </style>
    <!-- Style for an indeterminate circular progress -->
    <style name="AppTheme.Widget.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="showAnimationBehavior">inward</item>
    </style>
    <!-- Style for an indeterminate circular progress in a outlined button -->
    <style name="AppTheme.Widget.CircularProgressIndicator.Button" parent="Widget.Material3.CircularProgressIndicator.ExtraSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="showAnimationBehavior">inward</item>
    </style>
    <!-- Style for an indeterminate circular progress in a button -->
    <style name="AppTheme.Widget.CircularProgressIndicator.Button.Colored">
        <item name="indicatorColor">?attr/colorOnPrimary</item>
    </style>
    <!-- Style for the card views. -->
    <style name="AppTheme.Widget.Card" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>

    </style>
    <!-- Style for the card views. -->
    <style name="AppTheme.Widget.CardFilled" parent="@style/Widget.Material3.CardView.Filled" />
    <!-- Style for the outlined card views. -->
    <style name="AppTheme.Widget.CardOutlined" parent="@style/Widget.Material3.CardView.Outlined" />
    <!-- Style for the input text fields. -->
    <style name="AppTheme.Widget.InputText" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox" />
    <!-- Style for the filled input text fields. -->
    <style name="AppTheme.Widget.InputTextFilled" parent="@style/Widget.Material3.TextInputLayout.FilledBox" />
    <!-- Style for the input dropdown fields.-->
    <style name="AppTheme.Widget.InputDropdown" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />
    <!-- Style for an text button -->
    <style name="AppTheme.Widget.TextButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Style for an text button -->
    <style name="AppTheme.Widget.TextButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Style for an icon button -->
    <style name="AppTheme.Widget.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Style for a filled icon button -->
    <style name="AppTheme.Widget.IconButtonFilled" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Style for a radio button without text -->
    <style name="AppTheme.Widget.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <!-- Style for an outlined checkable icon button -->
    <style name="AppTheme.Widget.CheckableButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/selector_button_checkable_background</item>
        <item name="iconTint">@color/selector_button_checkable_tint</item>
    </style>
    <!-- Style for segmented buttons with only icons -->
    <style name="AppTheme.Widget.SegmentedIconButtons" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="backgroundTint">@color/selector_button_checkable_background</item>
        <item name="iconTint">@color/selector_button_checkable_tint</item>
    </style>
    <!-- Style for segmented buttons with only text -->
    <style name="AppTheme.Widget.SegmentedTextButtons" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="backgroundTint">@color/selector_button_checkable_background</item>
        <item name="android:textColor">@color/selector_button_checkable_tint</item>
    </style>
    <!-- Style for the main floating action button. -->
    <style name="AppTheme.Widget.Fab" parent="@style/Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_horizontal_default</item>
    </style>
    <!-- Style for the secondaries floating action buttons. -->
    <style name="AppTheme.Widget.FabSecondary" parent="@style/Widget.Material3.FloatingActionButton.Small.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin_fab_secondary_bottom</item>
    </style>
    <!-- Style for the collapsible search view. -->
    <style name="AppTheme.Widget.SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded</item>
        <item name="backgroundTint">?android:attr/colorBackground</item>

    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">16dp</item> <!-- Adjust corner size as needed -->
    </style>

    <!-- Base overlays theme. -->
    <style name="AppTheme.Overlay" />

    <!-- Base floating menu overlays theme. -->
    <style name="AppTheme.Overlay.FloatingMenu" />
    <!-- Style for the background card view of the floating menu. -->
    <style name="AppTheme.Overlay.FloatingMenu.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    <!-- Style for the layout of the buttons for the floating menu. -->
    <style name="AppTheme.Overlay.FloatingMenu.LayoutButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_fade_bottom</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_mini</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_mini</item>
        <item name="android:paddingTop">@dimen/margin_vertical_small</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_small</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- Style for the buttons of the floating menu. -->
    <style name="AppTheme.Overlay.FloatingMenu.Buttons">
        <item name="android:layout_width">@dimen/overlay_menu_btn_size</item>
        <item name="android:layout_height">@dimen/overlay_menu_btn_size</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:tint">@color/overlayMenuButtons</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <!-- Base style for the list elements. -->
    <style name="AppTheme.List" />
    <!-- Style for the list headers text. -->
    <style name="AppTheme.List.HeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_large</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_large</item>
        <item name="android:layout_marginStart">@dimen/margin_vertical_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_vertical_large</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.ListItemTitle</item>
    </style>
    <!-- Style for the list item main text. -->
    <style name="AppTheme.List.ItemTitle">
        <item name="android:layout_marginBottom">@dimen/margin_vertical_default</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_large</item>
        <item name="android:layout_marginStart">@dimen/margin_vertical_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_vertical_large</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.ListItemTitle</item>
    </style>
    <!-- Style for the list item secondary text.-->
    <style name="AppTheme.List.ItemSubText">
        <item name="android:layout_marginBottom">@dimen/margin_vertical_large</item>
        <item name="android:layout_marginStart">@dimen/margin_vertical_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_vertical_large</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.ListItemSubText</item>
    </style>

    <!-- Base style for fields. -->
    <style name="AppTheme.Field" />
    <!-- Style for the field title. -->
    <style name="AppTheme.Field.TitleText">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.FieldTitle</item>
    </style>
    <!-- Style for the list item secondary text.-->
    <style name="AppTheme.Field.SubText">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.FieldSubText</item>
    </style>

    <!-- Base text appearance. -->
    <style name="AppTheme.TextAppearance" />
    <!-- Text appearance for the dialog top bar title. -->
    <style name="AppTheme.TextAppearance.TopBarTitle" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <!-- Text appearance for the card view title. -->
    <style name="AppTheme.TextAppearance.CardTitle" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_large</item>
    </style>
    <!-- Text appearance for the list items title. -->
    <style name="AppTheme.TextAppearance.ListItemTitle" parent="@style/TextAppearance.Material3.TitleMedium" />
    <!-- Text appearance for the list sub text. -->
    <style name="AppTheme.TextAppearance.ListItemSubText" parent="@style/TextAppearance.Material3.BodyMedium" />
    <!-- Text appearance for the list items title. -->
    <style name="AppTheme.TextAppearance.FieldTitle" parent="@style/TextAppearance.Material3.BodyLarge" />
    <!-- Text appearance for the list sub text. -->
    <style name="AppTheme.TextAppearance.FieldSubText" parent="@style/TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">italic</item>
    </style>
    <!-- Text appearance for a card horizontal item text. -->
    <style name="AppTheme.TextAppearance.CardItemHText" parent="@style/TextAppearance.Material3.BodyMedium" />
    <!-- Text appearance for the body text. -->
    <style name="AppTheme.TextAppearance.Body" parent="@style/TextAppearance.Material3.BodyMedium" />
    <!-- Text appearance for the large body text. -->
    <style name="AppTheme.TextAppearance.BodyLarge" parent="@style/TextAppearance.Material3.BodyLarge" />
    <!-- Text appearance for the empty lists text. -->
    <style name="AppTheme.TextAppearance.EmptyText" parent="@style/TextAppearance.Material3.HeadlineSmall" />
    <!-- Text appearance for the secondary empty lists text. -->
    <style name="AppTheme.TextAppearance.EmptyTextSecondary" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textStyle">italic</item>
    </style>
    <!-- Text appearance for the overlays text. -->
    <style name="AppTheme.TextAppearance.OverlayBig" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingStart">@dimen/margin_horizontal_mini</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_mini</item>
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:textSize">@dimen/text_size_overlay_big</item>
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="ContainerHeading">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6.4sp</item>
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Heading">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">14.4sp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="SubHeadingStyle">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/headingTextColor</item>
    </style>

    <style name="ButtonHeading">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3.36sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
    </style>


    <style name="Description">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2.94sp</item>
        <item name="android:textColor">@color/normalTextColor</item>
    </style>

    <style name="DescriptionHeading">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2.94sp</item>
        <item name="android:textColor">@color/headingTextColor</item>
    </style>


    <style name="Tagline">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2.52sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <!--        <item name="android:backgroundTint">@color/secondaryColor</item>-->
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.RoundedImage50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <!-- Customize your Bottom Sheet appearance -->
        <item name="android:background">?attr/colorBackgroundFloating</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:popupBackground">@drawable/bg_round_16_dp</item>
    </style>
</resources>