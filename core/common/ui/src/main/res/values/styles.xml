<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base style for the base views. -->
    <style name="AppTheme.Dialog" />

    <!-- Base style for the widgets. -->
    <style name="AppTheme.Widget" />

    <!-- Style for the app bar layout. -->
    <style name="AppTheme.Widget.AppBarLayout" parent="@style/Widget.Material3.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- Style for the toolbar. -->
    <style name="AppTheme.Widget.Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/SubHeadingStyle</item>
    </style>

    <!-- Style for the card views. -->
    <style name="AppTheme.Widget.Card" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>

    </style>
    <!-- Style for the card views. -->
    <style name="AppTheme.Widget.CardFilled" parent="@style/Widget.Material3.CardView.Filled">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardElevation">1dp</item>
    </style>
    <!-- Style for the outlined card views. -->
    <style name="AppTheme.Widget.CardOutlined" parent="@style/Widget.Material3.CardView.Outlined" />
    <!-- Style for the input text fields. -->
    <style name="AppTheme.Widget.InputText" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox" />
    <!-- Style for the filled input text fields. -->
    <style name="AppTheme.Widget.InputTextFilled" parent="@style/Widget.Material3.TextInputLayout.FilledBox" />
    <!-- Style for the input dropdown fields.-->
    <style name="AppTheme.Widget.InputDropdown" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />
    <!-- Style for an text button -->
    <style name="AppTheme.Widget.TextButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Style for an text button -->
    <style name="AppTheme.Widget.TextButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Style for an icon button -->
    <style name="AppTheme.Widget.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for a radio button without text -->
    <style name="AppTheme.Widget.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="AppTheme.Widget.FabSecondary" parent="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minHeight">56dp</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textAppearance">@style/ButtonHeading</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/margin_vertical_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_horizontal_default</item>
        <item name="elevation">0dp</item>
    </style>


    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">?android:attr/colorBackground</item>

    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">16dp</item> <!-- Adjust corner size as needed -->
    </style>

    <!-- Base overlays theme. -->
    <style name="AppTheme.Overlay" />

    <!-- Base floating menu overlays theme. -->
    <style name="AppTheme.Overlay.FloatingMenu" />
    <!-- Style for the background card view of the floating menu. -->
    <style name="AppTheme.Overlay.FloatingMenu.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">48dp</item>
    </style>
    <!-- Style for the layout of the buttons for the floating menu. -->
    <style name="AppTheme.Overlay.FloatingMenu.LayoutButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_overlay_menu</item>
        <item name="android:padding">@dimen/margin_vertical_small</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- Style for the buttons of the floating menu. -->
    <style name="AppTheme.Overlay.FloatingMenu.Buttons">
        <item name="android:layout_width">@dimen/overlay_menu_btn_size</item>
        <item name="android:layout_height">@dimen/overlay_menu_btn_size</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ContainerHeading">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6.4sp</item>
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Heading">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">14.4sp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="SubHeadingStyle">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/headingTextColor</item>
    </style>

    <style name="ButtonHeading">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3.36sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
    </style>


    <style name="Description">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2.94sp</item>
        <item name="android:textColor">@color/normalTextColor</item>
    </style>

    <style name="DescriptionHeading">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2.94sp</item>
        <item name="android:textColor">@color/headingTextColor</item>
    </style>


    <style name="Tagline">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2.52sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <!--        <item name="android:backgroundTint">@color/secondaryColor</item>-->
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.RoundedImage50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:popupBackground">@drawable/bg_round_16_dp</item>
    </style>


</resources>