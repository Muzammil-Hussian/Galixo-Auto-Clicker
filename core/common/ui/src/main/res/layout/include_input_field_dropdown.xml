<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:boxBackgroundColor="@color/edit_text_box_background"
    app:boxCornerRadiusBottomEnd="@dimen/padding_12_dp"
    app:boxCornerRadiusBottomStart="@dimen/padding_12_dp"
    app:boxCornerRadiusTopEnd="@dimen/padding_12_dp"
    app:boxCornerRadiusTopStart="@dimen/padding_12_dp"
    app:boxStrokeColor="@color/field_border_color"
    app:boxStrokeWidth="0dp"
    app:boxStrokeWidthFocused="0dp">

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/text_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:inputType="none"
        android:lines="1"
        android:textAppearance="@style/Description"
        tools:text="@string/dropdown_label_time_unit_ms" />

</com.google.android.material.textfield.TextInputLayout>
